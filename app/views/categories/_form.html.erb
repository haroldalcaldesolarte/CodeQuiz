<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h6><%= pluralize(category.errors.count, "error") %>. No se puede guardar esta categoría:</h6>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-3">
    <%= form.label 'Nombre' , class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, required: true, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit(@category.persisted? ? "Actualizar Categoría" : "Crear Categoría", class: "btn btn-primary") %>
    
    <div>
      <% if @category.persisted? %>
        <%= link_to '<i class="fas fa-magnifying-glass"></i> Ver'.html_safe, @category, class: "btn btn-secondary"%>
      <% end %>
      <%= link_to '<i class="fas fa-backward"></i> Volver'.html_safe, categories_path, class: "btn btn-dark"%>
    </div>
  </div>
<% end %>
