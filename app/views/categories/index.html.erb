<div class="container">
  <h1>Categorias <%= link_to 'Nueva Categoria <i class="fas fa-circle-plus"></i>'.html_safe, new_category_path, class: 'btn btn-success' %></h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nombre</th>
        <th colspan="3">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td>
            <%= link_to 'Show <i class="fas fa-magnifying-glass"></i>'.html_safe, category, class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Edit <i class="far fa-pen-to-square"></i>'.html_safe, edit_category_path(category), class: 'btn btn-warning btn-sm' %>
            <%= link_to 'Destroy <i class="far fa-trash-can"></i>'.html_safe, category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>