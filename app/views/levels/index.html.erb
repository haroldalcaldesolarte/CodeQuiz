<div class="container text-center">
  <h1>Niveles <%= link_to 'Nuevo Nivel <i class="fas fa-circle-plus"></i>'.html_safe, new_level_path, class: 'btn btn-success'%></h1>

  <div class="table-responsive" style="max-height: 500px; overflow-y: auto; border: 1px solid #ddd; border-radius: 8px;">
    <table class="table table-striped mb-0">
      <thead>
        <tr>
          <th>Nombre</th>
          <th colspan="3">Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% @levels.each do |level| %>
          <tr>
            <td><%= level.name %> </td>
            <td>
              <%= link_to 'Ver <i class="fas fa-magnifying-glass"></i>'.html_safe , level, class: 'btn btn-primary btn-sm'%>
              <%= link_to 'Editar <i class="far fa-pen-to-square"></i>'.html_safe, edit_level_path(level), class: 'btn btn-warning btn-sm'%>
              <%= link_to 'Eliminar <i class="far fa-trash-can"></i>'.html_safe, level, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
</div>
