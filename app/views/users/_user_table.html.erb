<div class="table-responsive" style="max-height: 400px; overflow-y: auto; border: 1px solid #ddd; border-radius: 8px;">
  <table class="table table-striped mb-0">
    <thead>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Nombre</th>
        <th>Apellidos</th>
        <th>Username</th>
        <th>Curso</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
          <td><%= user.surname %></td>
          <td><%= user.username %></td>
          <td><%= user.course.course_display_name %></td>
          <td>
            <%= link_to 'Editar <i class="far fa-pen-to-square"></i>'.html_safe, edit_user_path(user), class: "btn btn-warning btn-sm" %>
            <% if current_user.admin? %>
              <%= link_to 'Eliminar <i class="far fa-trash-can"></i>'.html_safe, user_path(user), method: :delete, data: { confirm: "¿Estás seguro?" }, class: "btn btn-danger btn-sm" %>
              <%= link_to 'Cambiar contraseña <i class="far fa-pen-to-square"></i>'.html_safe, edit_password_user_path(user), class: "btn btn-warning btn-sm" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
