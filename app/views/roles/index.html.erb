<div class="container text-center">

  <h1>Roles <%= link_to 'Nuevo Rol <i class="fas fa-circle-plus"></i>'.html_safe, new_role_path, class: 'btn btn-success'%></h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nombre</th>
        <th colspan="3">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @roles.each do |role| %>
        <tr>
          <td><%= role.name %> </td>
          <td>
            <%= link_to 'Ver <i class="fas fa-magnifying-glass"></i>'.html_safe , role, class: 'btn btn-primary btn-sm'%>
            <%= link_to 'Editar <i class="far fa-pen-to-square"></i>'.html_safe, edit_role_path(role), class: 'btn btn-warning btn-sm'%>
            <%= link_to 'Eliminar <i class="far fa-trash-can"></i>'.html_safe, role, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>
