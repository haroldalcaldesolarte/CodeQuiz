<div class="container text-center">
  <h1>Ver Rol</h1>
  <br>
  <div class="row mb-3">
    <label for="Nombre" class="col-sm-2 col-form-label">Nombre</label>
    <div class="col-sm-10">
      <input type="text" value="<%= @role.name %>" class="form-control" readonly>
    </div>
  </div>

  <div class= "actions">
    <%= link_to 'Editar <i class="far fa-pen-to-square"></i>'.html_safe, edit_role_path(@role), class: "btn btn-warning" %>
    <div>
      <%= link_to '<i class="fas fa-backward"></i> Volver'.html_safe, roles_path , class: "btn btn-dark" %>
    </div>
  </div>
</div>
