<div class="container text-center mt-5">
  <h1>Cursos <%= link_to 'Nuevo Curso <i class="fas fa-circle-plus"></i>'.html_safe, new_course_path, class: 'btn btn-success'%></h1>
    <div class="table-responsive" style="max-height: 500px; overflow-y: auto; border: 1px solid #ddd; border-radius: 8px;">
      <table class="table table-striped mb-0">
      <thead>
        <tr>
          <th>AÃ±o</th>
          <th>Nombre</th>
          <th colspan="3">Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.year %></td>
            <td><%= course.name %></td>
            <td>
              <%= link_to 'Ver <i class="fas fa-magnifying-glass"></i>'.html_safe, course, class: 'btn btn-primary btn-sm' %>
              <%= link_to 'Editar <i class="far fa-pen-to-square"></i>'.html_safe, edit_course_path(course), class: 'btn btn-warning btn-sm' %>
              <%= link_to 'Eliminar <i class="far fa-trash-can"></i>'.html_safe, course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>