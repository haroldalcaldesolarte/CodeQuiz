<div class="container text-center">
  <h1>Ver Curso</h1>
  <br>
  <div class="row mb-3">
    <label for="Nombre" class="col-sm-2 col-form-label">Nombre</label>
    <div class="col-sm-10">
      <input type="text" value="<%= @course.name %>" class="form-control" readonly>
    </div>
  </div>

  <div class="row mb-3">
    <label for="Año" class="col-sm-2 col-form-label">Año</label>
    <div class="col-sm-10">
      <input type="text" value="<%= @course.year %>" class="form-control" readonly>
    </div>
  </div>
  
  <div class= "actions">
    <%= link_to 'Editar <i class="far fa-pen-to-square"></i>'.html_safe, edit_course_path(@course), class: "btn btn-warning" %>
    <div>
      <%= link_to '<i class="fas fa-backward"></i> Volver'.html_safe, courses_path , class: "btn btn-dark" %>
    </div>
  </div>
</div>
