<div class="container d-flex justify-content-center mt-5">
  <div class="card text-center shadow p-4" style="width: 50rem;">
    <h5 class="card-title mb-4">Inicio de sesión</h5>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-floating mb-3">
        <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
        <%= f.label :email, for: "user_email" %>
      </div>

      <div class="form-floating mb-3">
        <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
        <%= f.label :password, for: "user_password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check d-flex align-items-center mb-3">
          <%= f.check_box :remember_me, class: "form-check-input me-2" %>
          <%= f.label :remember_me, class: "form-check-label mb-0" %>
        </div>
      <% end %>

      <div class="actions_devise">
        <%= f.submit "Iniciar Sesión", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
