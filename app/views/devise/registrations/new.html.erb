<div class="container d-flex justify-content-center mt-5">
  <div class="card text-center shadow p-4" style="width: 50rem;">
    <h5 class="card-title mb-4">Nueva Cuenta</h5>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-floating mb-3">
        <%= f.text_field :name, class: "form-control", placeholder: "Nombre", autofocus: true, required: true %>
        <%= f.label :name, "Nombre", for: "user_name" %>
      </div>

      <div class="form-floating mb-3">
        <%= f.text_field :surname, class: "form-control", placeholder: "Apellidos", required: true  %>
        <%= f.label :surname, "Apellidos", for: "user_surname" %>
      </div>

      <div class="form-floating mb-3">
        <%= f.email_field :email, class: "form-control", placeholder: "Email", required: true %>
        <%= f.label :email, "Email", for: "user_email" %>
      </div>
      <div class="row g-2">
        <div class="col-md">
          <div class="form-floating">
            <%= f.collection_select :course_id, Course.all, :id, :course_display_name, { prompt: "Seleccione un curso" }, { class: "form-select", required: true } %>
            <%= f.label :course_id, "Curso", for: "user_course_id" %>
          </div>
        </div>

        <div class="col-md">
          <div class="form-floating mb-3">
            <%= f.text_field :username, class: "form-control",placeholder: "Username", required: true %>
            <%= f.label :username, 'Username', for: "user_username" %>
          </div>
        </div>
      </div>

      <div class="form-floating mb-3 position-relative">
        <%= f.password_field :password, required: true, class: "form-control", placeholder: "Password" %>
        <%= f.label :password, "Password (#{@minimum_password_length} caracteres mÃ­nimo)" %>
        <i class="fas fa-eye position-absolute top-50 end-0 translate-middle-y pe-3" onclick="togglePassword('user_password')"></i>
      </div>

      <div class="form-floating mb-3 position-relative">
        <%= f.password_field :password_confirmation, required: true, class: "form-control", placeholder: "Confirmar password" %>
        <%= f.label :password_confirmation, 'Confirma Password' %>
        <i class="fas fa-eye position-absolute top-50 end-0 translate-middle-y pe-3" onclick="togglePassword('user_password_confirmation')"></i>
      </div>

      <div class="actions_devise">
        <%= f.submit "Crear cuenta", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
<br><br><br>
<script>
  function togglePassword(id) {
    const passwordField = document.getElementById(id);
    const type = passwordField.getAttribute("type") === "password" ? "text" : "password";
    passwordField.setAttribute("type", type);
  }
</script>