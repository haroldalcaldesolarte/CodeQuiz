<div class="container text-center mt-5">
  <h1 class="mb-3">Ver Pregunta
    <span class="badge">
      <%= question_status_icon(@question) %>
    </span>
  </h1>

  <%= render 'info', question: @question %>

  <div class="mb-3"></div>

  <div class= "actions mb-3">
    <%= link_to 'Editar <i class="far fa-pen-to-square"></i>'.html_safe, edit_question_path(@question), class: "btn btn-warning" if @question.editable?(current_user) %>
    <div>
      <%= link_to '<i class="fas fa-backward"></i> Volver'.html_safe, questions_path , class: "btn btn-dark" %>
    </div>
  </div>
</div>
