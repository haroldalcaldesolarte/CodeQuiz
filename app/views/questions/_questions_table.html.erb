<div class="table-responsive" style="max-height: 500px; overflow-y: auto; border: 1px solid #ddd; border-radius: 8px;">
  <table class="table table-striped mb-0">
    <thead>
      <tr>
        <th>Pregunta</th>
        <th>Categoría</th>
        <th>Nivel</th>
        <th>Estado</th>
        <th>Autor</th>
        <th>Revisor</th>
        <th colspan="3">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% questions.each do |question| %>
        <tr>
          <td><%= question.question_text %></td>
          <td><%= question.category.name %> (<%= get_course_category(question.category.id) %>)</td>
          <td><%= question.level.name %></td>
          <td>
            <%= question_status_icon(question) %>
          </td>
          <td><%= question.author.username %></td>
          <td><%= question.revisor.username unless question.revisor.nil? %></td>
          <td>
            <%= link_to '<i class="fas fa-magnifying-glass"></i>'.html_safe, question, class: 'btn btn-primary btn-sm' %>
            <%= link_to '<i class="far fa-pen-to-square"></i>'.html_safe, edit_question_path(question), class: 'btn btn-warning btn-sm' %>
            <%= link_to '<i class="far fa-trash-can"></i>'.html_safe, question, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
