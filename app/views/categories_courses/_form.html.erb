<%= form_with(model: categories_course) do |form| %>
  <% if categories_course.errors.any? %>
    <div id="error_explanation">
      <h6><%= pluralize(categories_course.errors.count, "error") %> No se puede guardar esta relación:</h6>

      <ul>
        <% categories_course.errors.each do |error| %>
          <li><%= error.message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-3">
    <%= form.label 'Curso' , class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.collection_select :course_id, @courses, :id, :course_display_name, { prompt: "Selecciona un curso" }, { class: "form-select mb-3", required: true } %>
    </div>
  </div>

  <div class="row mb-3">
    <%= form.label 'Categoría' , class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.collection_select :category_id, @categories, :id, :name, { prompt: "Selecciona una categoría" }, { class: "form-select mb-3", required: true} %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit(@categories_course.persisted? ? "Actualizar Relación" : "Crear Relación", class: "btn btn-primary") %>
    
    <div>
      <% if @categories_course.persisted? %>
        <%= link_to '<i class="fas fa-magnifying-glass"></i> Ver'.html_safe, @categories_course, class: "btn btn-secondary"%>
      <% end %>
      <%= link_to '<i class="fas fa-backward"></i> Volver'.html_safe, categories_courses_path, class: "btn btn-dark"%>
    </div>
  </div>
<% end %>
